# Configuración de la aplicación
PORT=3000
HOSTNAME=0.0.0.0

# Configuración de seguridad (opcional)
NEXTAUTH_SECRET=tu-secret-key-aqui
NEXTAUTH_URL=https://tu-dominio.com

